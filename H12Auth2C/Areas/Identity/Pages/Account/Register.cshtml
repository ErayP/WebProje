@page
@model RegisterModel

<head>
    <link rel="stylesheet" href="~/css/site.css" type="text/css"/>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Yeni Kullanıcı Oluştur.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating register-input">
                    <input asp-for="Input.UserAd" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.UserAd"></label>
                    <span asp-validation-for="Input.UserAd" class="text-danger"></span>
                </div>
                <div class="form-floating register-input">
                    <input asp-for="Input.UserSoyad" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.UserSoyad"></label>
                    <span asp-validation-for="Input.UserSoyad" class="text-danger"></span>
                </div>
                <div class="form-floating register-input">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating register-input">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating register-input">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating register-input">
                    <input asp-for="Input.birthdate" class="form-control" aria-required="true" />
                    <label asp-for="Input.birthdate"></label>
                    <span asp-validation-for="Input.birthdate" class="text-danger"></span>
                </div>
                <div class="form-floating register-input">
                    <select asp-for="Input.Gender" class="form-control" aria-required="true">
                        <option value="true">Erkek</option>
                        <option value="false">Kadın</option>
                    </select>
                    <label asp-for="Input.Gender"></label>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>


                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
   
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
