@model IEnumerable<H12Auth2C.Models.Company>

<style>
    /* Add your custom styles for the table */
    .list-container {
        margin-top: 20px;
    }

        .list-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .list-container th,
        .list-container td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        .list-container th {
            background-color: #007bff;
            color: #ffffff;
        }

        .list-container tbody tr:hover {
            background-color: #f5f5f5;
        }

    .btn-create-new {
        background-color: #28a745;
        color: #ffffff;
    }

        .btn-create-new:hover {
            background-color: #218838;
        }

    .btn-edit {
        background-color: #ffc107;
        color: #000000;
    }

        .btn-edit:hover {
            background-color: #e0a800;
        }

    .btn-delete {
        background-color: #dc3545;
        color: #ffffff;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>

<div class="list-container">
    <a style="color:red">@TempData["msjcompany"]</a>
    <p>
        <a class="btn btn-create-new" asp-action="Add">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logo)
                    </td>
                    <td>
                        <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
