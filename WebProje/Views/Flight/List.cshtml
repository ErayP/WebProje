@model IEnumerable<WebProje.Models.Flight>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Add">Yeni uçuş ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.departureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.departurePlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrivalPlace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.departureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.PlaneType.modelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departurePlace.AirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrivalPlace.AirportName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
        <p style="color:red">@TempData["msj"]</p>
    </tbody>
</table>
